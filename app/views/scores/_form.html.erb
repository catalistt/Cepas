<%= form_with(model: score, local: true) do |form| %>
  <% if score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul>
      <% score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :grade %>
    <%= form.text_field :grade %>
  </div>

  <div class="field">
    <%= form.label :wine_id %>
    <%= form.text_field :wine_id %>
  </div>

  <div class="form-group">
      <%= form.label :enologist_id %>
      <%= form.collection_check_boxes(:enologist_id, Enologist.all, :id, :name) do |enologist| %>
        <%= enologist.label class: 'label-checkbox' do %>
          <% enologist.check_box + enologist.text %>
        <% end %>
      <% end%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
